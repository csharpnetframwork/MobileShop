@model Phone
@{
    ViewData["Title"] = "Add New Phone";
}
<h2>Add New Phone</h2>

<form asp-action="AddPhone" method="post">
    <div class="form-group">
        <label>Model</label>
        <input asp-for="Model" class="form-control" />
    </div>
    <div class="form-group">
        <label>Quantity</label>
        <input asp-for="Quantity" type="number" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add Phone</button>
</form>
